// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int           @id @default(autoincrement())
  email    String        @unique
  password String
  apps     Application[]
  tags     Tag[]
}

model Application {
  id          Int      @id @default(autoincrement())
  company     String
  position    String
  status      String
  source      String?
  notes       String?
  dateApplied DateTime
  dateUpdated DateTime @updatedAt
  resumeUrl   String?
  tags        ApplicationTag[]
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
}

model Tag {
  id     Int               @id @default(autoincrement())
  name   String
  user   User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
  apps   ApplicationTag[]

  @@unique([userId, name]) // A user can't create two tags with same name
}

model ApplicationTag {
  appId Int
  tagId Int
  app   Application @relation(fields: [appId], references: [id])
  tag   Tag         @relation(fields: [tagId], references: [id])
  @@id([appId, tagId])
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int           @id @default(autoincrement())
  name String
  email    String        @unique
  password String
  apps     Application[]
  tags     Tag[]
  resetToken        String?     
  resetTokenExpiry  DateTime?
  inactivityThresholdDays Int? @default(30)
  dailyApplicationGoal Int? @default(3)
}

model Application {
  id               Int      @id @default(autoincrement())
  company          String
  position         String
  status           String
  mode             String
  referred         Boolean @default(false)
  source           String?
  notes            String?
  tailoredResume   Boolean
  tailoredCoverLetter Boolean
  dateApplied      DateTime
  salaryExact      Int?
  salaryMin        Int?
  salaryMax        Int?
  effectiveSalary  Decimal? @db.Decimal(12,2)
  dateUpdated      DateTime @updatedAt
  interviewRoundsDone  Int? @default(0)
  interviewRoundsTotal Int? @default(1)
  lastProgressAt   DateTime?
  resumeUrl        String?
  tags             Tag[]
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           Int
  @@index([userId, lastProgressAt])
  @@index([userId, dateApplied])
  @@index([userId, status])
  @@index([userId, mode])
  @@index([userId, company])
  @@index([userId, position])
  @@index([userId, dateUpdated])
  @@index([userId, effectiveSalary])
}

model Tag {
  id     Int               @id @default(autoincrement())
  name   String
  user   User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
  apps   Application[]

  @@unique([userId, name]) // A user can't create two tags with same name
  @@index([userId])
  @@index([userId, name])
}
